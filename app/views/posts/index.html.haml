.container.bg-light.rounded.my-4
  = form_with model: @post do |f|
    .row.mx-3.px-md-3.pt-5
      .col-sm
        %label
          Co leży Ci na sercu?
        .input-group
          =f.text_area("body_text", class: 'form-control', "data-toggle" => "collapse", "data-target" => "shoutbox-unveil")
    .row.mx-3.px-md-3.py-0
      .col-md-6.collapse.shoutbox-unveil
        =recaptcha_tags
      .col.collapse.shoutbox-unveil
        =f.submit('Wyślij', class: 'btn btn-primary btn-lg')
      .col.collapse.shoutbox-unveil
        =f.text_field("author", class: 'form-control', placeholder: "Autor")
    .row.mx-3.px-md-3.pt-2.pb-5

= render 'layouts/newest'
